.poker-page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-image: url(<%= asset_path 'blackwood.png' %>);
}

.table-container {
  width: 90%;
  height: 700px;
  border-radius: 360px;
  background-image: url(<%= asset_path 'poker1.jpg' %>);
  margin: auto;
  border: 14px solid #855731;
}

.table-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 233px;
  justify-content: space-evenly;
  align-items: center;
}

.mid-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 233px;
  justify-content: space-between;
  align-items: center;
}